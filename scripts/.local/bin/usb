#!/usr/bin/bash

list() {
    local manu_len=0
    local prod_len=0
    local serial_len=0
    local valid_buses=()

    # preprocess for pretty printing
    for i in /sys/bus/usb/drivers/usb/*-*; do
        [ -e "$i" ] || continue

        manu=`cat $i/manufacturer 2>/dev/null`
        prod=`cat $i/product 2>/dev/null`
        serial=`cat $i/serial 2>/dev/null`

        [ $manu_len -lt ${#manu} ] && manu_len=${#manu}
        [ $prod_len -lt ${#prod} ] && prod_len=${#prod}
        [ $serial_len -lt ${#serial} ] && serial_len=${#serial}
    done

    ((manu_len+=1))
    ((prod_len+=1))
    ((serial_len+=1))
    format="%-5s| %-10s| %-${manu_len}s| %-${prod_len}s| %-${serial_len}s| %-4s\n"

    for i in /sys/bus/usb/drivers/usb/*-*; do
        [ -e "$i" ] || continue
        bus_port=${i##*/}
        valid_buses+=($bus_port)

        idVendor=`cat $i/idVendor 2>/dev/null`
        idProduct=`cat $i/idProduct 2>/dev/null`
        manu=`cat $i/manufacturer 2>/dev/null`
        prod=`cat $i/product 2>/dev/null`
        serial=`cat $i/serial 2>/dev/null`

        [[ ! -z "$serial" ]] && block_path=`ls -l /dev/disk/by-id/*$serial-0:0 2>/dev/null`
        [[ ! -z "$block_path" ]] && block=`echo $block_path | awk -F/ '{print $NF}'` || block=""

        printf "$format" "$bus_port" "$idVendor:$idProduct" "$manu" "$prod" "$serial" "$block"
    done
}

_bind="/sys/bus/usb/drivers/usb/bind"
_unbind="/sys/bus/usb/drivers/usb/unbind"

bind_usb() {
    su - root -c "echo $1 > $_bind"
}

unbind_usb() {
    su - root -c "echo $1 > $_unbind"
}

reset_usb() {
    su - root -c "echo $1 > $_bind && sleep 1 && echo $1 > $_unbind"
}

ARGS=()

while [[ $# -gt 0 ]]; do
    case $1 in
        -b|--bind)
            if [ ! -z "$UNBIND" ]; then
                shift && continue
            fi
            BIND=true
            shift
            ;;
        -u|--unbind)
            if [ ! -z "$BIND" ]; then
                shift && continue
            fi
            UNBIND=true
            shift
            ;;
        -r|--reset)
            BIND=""
            UNBIND=""
            RESET=true
            shift
            ;;
        -l|--list)
            list
            exit 0
            ;;
        -*|--*)
            echo "Unknown option $1"
            exit 1
            ;;
        *)
            ARGS+=("$1")
            shift
            ;;
    esac
done

set -- "${ARGS[@]}"

if [ $# -eq 0 ]; then
    list
    exit 0
fi

[[ ! -z "$BIND" ]] && bind_usb $1
[[ ! -z "$UNBIND" ]] && unbind_usb $1
[[ ! -z "$RESET" ]] && reset_usb $1


exit


## if in array
#if [[ "${array[*]}" =~ "${value}" ]]; then
#    # whatever you want to do when array contains value
#fi
#
## if not in array
#if [[ ! "${array[*]}" =~ "${value}" ]]; then
#    # whatever you want to do when array contains value
#fi
