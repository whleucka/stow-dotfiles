#!/usr/bin/env bash
set -o allexport; source .env; set +o allexport
PWD=$(pwd)
if [[ ! -d "/home/whleucka/.local/bin/ChatGPTerminator" ]]; then
    cd /home/whleucka/stow-dotfiles/scripts/.local/bin || return
    git clone https://github.com/AineeJames/ChatGPTerminator || return
    cd ChatGPTerminator && python3 -m venv venv && pip install -r requirements.txt

fi
cd /home/whleucka/.local/bin/ChatGPTerminator || return
$(which python3) ChatGPTerminator.py
cd "$PWD" || exit
