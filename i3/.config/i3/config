set $sapphire  #74c7ec
set $blue      #89b4fa
set $lavender  #b4befe
set $active    #364259
set $text      #cdd6f4
set $selection #41455c
set $subtext1  #bac2de
set $subtext0  #a6adc8
set $overlay2  #9399b2
set $overlay1  #7f849c
set $overlay0  #6c7086
