#!/usr/bin/env zsh
fg() { 
    if [[ $# -eq 1 && $1 = - ]]; then
        builtin fg %-;
    elif [[ "$*" =~ ^[0-9]+$ ]]; then
        builtin fg %"$*";
    else
        builtin fg "$@";
    fi
}

batdiff() {
    git diff --name-only --relative --diff-filter=d | xargs bat --diff;
}

nvim-update() {
    current=$(pwd)
    neovim_dir=$HOME/.neovim-config/astro/
    user_dir=$HOME/.neovim-config/astro/.config/nvim/lua/user/

    cd $neovim_dir;
    git pull -v;

    cd $user_dir;
    git pull -v;

    cd $current;
    printf "Done!\n"
}
