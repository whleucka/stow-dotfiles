#!/usr/bin/env zsh
fg() { 
    if [[ $# -eq 1 && $1 = - ]]; then
        builtin fg %-;
    elif [[ "$*" =~ ^[0-9]+$ ]]; then
        builtin fg %"$*";
    else
        builtin fg "$@";
    fi
}
what() {
    curl cheat.sh/$1;
}

stow-update() {
    printf "One moment...\n\n"
    current=$(pwd)
    stow_dir=$HOME/stow-dotfiles

    cd $stow_dir;

    printf "Pulling stow-dotfiles...\n\n"
    git pull -v;

    cd $current;

    printf "\n\nUpdating plugins...\n\n"
    nvim --headless "+Lazy! sync" +UpdateRemotePlugins +qa

    printf "\n\nDone!\n"
}
