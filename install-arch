#!/usr/bin/env bash
printf "Installing system packages...\n"

if ! command -v yay &> /dev/null
then
    printf "Installing yay..."
    git clone https://aur.archlinux.org/yay.git ~/yay
    cd ~/yay && makepkg -si
    cd ~/stow-dotfiles
    rm -rf ~/yay
fi

# Main packages
yay -S adobe-source-han-sans-otc-fonts amd-ucode arandr archlinux-keyring autoconf automake barrier base bat binutils bison bleachbit bpytop btrfs-progs calc certbot certbot-nginx cmatrix-git composer ctop dbus-python dmenu docker docker-compose efibootmgr evolution exa expressvpn-gui-gtk faac fail2ban fakeroot fd feh file file-roller findutils flex fzf gawk gcc gettext git gnome-bluetooth gnome-keyring google-chrome gopls grep groff gst-plugin-pipewire gzip htop i3-wm i3blocks i3lock i3lock-fancy-git i3status imagemagick iwd jasper jq kitty lazygit libdv libpulse libtool libvncserver lightdm lightdm-gtk-greeter linux linux-firmware localepurge lutris m4 maim make mariadb mpv nano ncdu neofetch neovim network-manager-applet networkmanager nfs-utils nginx-mainline nodejs nomacs noto-fonts noto-fonts-cjk noto-fonts-emoji noto-fonts-extra npm nvidia nvidia-settings obs-studio pacman patch pavucontrol php php-fpm php-imagick php-pgsql php-sqlite picard picom pipewire pipewire-alsa pipewire-jack pipewire-pulse pkgconf playerctl plex-media-server polybar postman-bin prettier prettier-plugin-php pulseaudio-control python python-pip qbittorrent reflector remmina ripgrep rofi sed smartmontools steam stow sudo systemd-boot-pacman-hook texinfo thunar timeshift timeshift-autosnap tmux transmission-cli transmission-gtk ufw vlc w3m wget which wine wireguard-tools wireless_tools wireplumber x11vnc xautolock xclip xdg-utils xorg-server xorg-xinit xterm yay-git zram-generator zsh

# Install Oh My Zsh
printf "Installing Oh my zsh...\n"
sh -c "$(curl -fsSL https://raw.githubusercontent.com/ohmyzsh/ohmyzsh/master/tools/install.sh)"

printf "Installing zsh plugins...\n"
git clone https://github.com/Aloxaf/fzf-tab.git ${ZSH_CUSTOM:-$HOME/.oh-my-zsh/custom}/plugins/fzf-tab
git clone https://github.com/zsh-users/zsh-syntax-highlighting.git ${ZSH_CUSTOM:-$HOME/.oh-my-zsh/custom}/plugins/zsh-syntax-highlighting
git clone https://github.com/zsh-users/zsh-autosuggestions.git ${ZSH_CUSTOM:-$HOME/.oh-my-zsh/custom}/plugins/zsh-autosuggestions
git clone https://github.com/chrissicool/zsh-256color ${ZSH_CUSTOM:-$HOME/.oh-my-zsh/custom}/plugins/zsh-256color
git clone https://github.com/wting/autojump.git ${ZSH_CUSTOM:-$HOME/.oh-my-zsh/custom}/plugins/autojump && cd ${ZSH_CUSTOM:-$HOME/.oh-my-zsh/custom}/plugins/autojump && python install.py
git clone --depth=1 https://github.com/romkatv/powerlevel10k.git ${ZSH_CUSTOM:-$HOME/.oh-my-zsh/custom}/themes/powerlevel10k
git clone https://github.com/TamCore/autoupdate-oh-my-zsh-plugins ${ZSH_CUSTOM:-$HOME/.oh-my-zsh/custom}/plugins/autoupdate

printf "Installing Rust...\n"
curl --proto '=https' --tlsv1.2 -sSf https://sh.rustup.rs | sh

printf "Setting timezone...\n"
timedatectl set-timezone America/Edmonton

# Download font from nerdfonts.com - UbuntuMono
wget https://github.com/ryanoasis/nerd-fonts/releases/download/v2.3.3/UbuntuMono.zip
unzip ./UbuntuMono.zip -d ~/.local/share/fonts
rm ./UbuntuMono.zip

cd ~ && printf "With great power comes great responsibility\n"
