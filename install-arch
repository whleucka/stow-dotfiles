#!/usr/bin/env bash
printf "Installing system packages...\n"

# Install yay
git clone https://aur.archlinux.org/yay.git ~/yay
cd ~/yay && makepkg -si
cd ~/stow-dotfiles
rm -rf ~/yay

# Main packages
sudo yay -S zsh google-chrome neofetch xclip exa stow curl gcc zsh npm nodejs \
    ripgrep python-pip bat bat-extras php gopls kitty python3 fzf wireguard-tools \
    evolution nvidia-settings fd noto-fonts composer picom polybar w3m \
    maim imagemagik timeshift systemd-resolvconf jq bc dialog pv xautolock i3lock-fancy-git

# Extras
sudo yay -S ttf-weather-icons ttf-material-icons ncdu expressvpn-gui-gtk \
    transmission-gtk prettier nomacs thunar feh

# Install Oh My Zsh
printf "Installing Oh my zsh...\n"
sh -c "$(curl -fsSL https://raw.githubusercontent.com/ohmyzsh/ohmyzsh/master/tools/install.sh)"

printf "Installing zsh plugins...\n"
git clone https://github.com/Aloxaf/fzf-tab.git ${ZSH_CUSTOM:-$HOME/.oh-my-zsh/custom}/plugins/fzf-tab
git clone https://github.com/zsh-users/zsh-syntax-highlighting.git ${ZSH_CUSTOM:-$HOME/.oh-my-zsh/custom}/plugins/zsh-syntax-highlighting
git clone https://github.com/zsh-users/zsh-autosuggestions.git ${ZSH_CUSTOM:-$HOME/.oh-my-zsh/custom}/plugins/zsh-autosuggestions
git clone https://github.com/chrissicool/zsh-256color ${ZSH_CUSTOM:-$HOME/.oh-my-zsh/custom}/plugins/zsh-256color
git clone https://github.com/wting/autojump.git ${ZSH_CUSTOM:-$HOME/.oh-my-zsh/custom}/plugins/autojump && cd ${ZSH_CUSTOM:-$HOME/.oh-my-zsh/custom}/plugins/autojump && python install.py
git clone --depth=1 https://github.com/romkatv/powerlevel10k.git ${ZSH_CUSTOM:-$HOME/.oh-my-zsh/custom}/themes/powerlevel10k
git clone https://github.com/TamCore/autoupdate-oh-my-zsh-plugins ${ZSH_CUSTOM:-$HOME/.oh-my-zsh/custom}/plugins/autoupdate

printf "Installing Rust...\n"
curl --proto '=https' --tlsv1.2 -sSf https://sh.rustup.rs | sh

printf "Setting timezone...\n"
timedatectl set-timezone America/Edmonton

# Download font from nerdfonts.com - UbuntuMono
# Unzip to .local/share/fonts

cd ~ && printf "With great power comes great responsibility\n"
